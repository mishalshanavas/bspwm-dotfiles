# Minimal Kitty Configuration for GNOME

# Window decorations
hide_window_decorations yes
window_padding_width 4

# Font
font_family JetBrainsMono Nerd Font
font_size 10.0

# Colors (minimal dark theme)
foreground #b0b0b0
background #0a0a0a
cursor #c0c0c0

# Opacity
background_opacity 0.95

# Performance
repaint_delay 10
input_delay 3
sync_to_monitor yes
